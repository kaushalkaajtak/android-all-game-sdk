<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_marginHorizontal="30dp"
    android:elevation="5dp"
    android:background="@drawable/bg_card_wrong_answer_shape"
    android:layout_height="wrap_content"
    android:id="@+id/ll_dia"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/tvQuestionInfo"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/mukta_bold"
        android:padding="30dp"
        android:layout_width="match_parent"
        android:textSize="17sp"
        android:text="@string/leaderboard_not_found"
        android:layout_height="match_parent"/>

    <View
        android:background="@color/grey_dull_"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/tvOk"
        android:text="OK"
        android:textColor="@color/black"
        android:textSize="15sp"
       android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

</LinearLayout>